<div id="manual-coord-entry-container" class="manual-coord-entry" data-bind="visible: ui.spatialType.manualEntryVisible() || query.spatial() && (query.spatial().indexOf('point') >= 0 || query.spatial().indexOf('bounding_box') >= 0)">
  <p>
    <i class="fa fa-fw fa-crop"></i>
    <span>
      <strong><!-- ko text: ui.spatialType.displaySpatial() + ':' --><!-- /ko --></strong>
      <!-- ko if: ui.spatialType.displaySpatial() == 'Point' -->
        <input type="text" name="manual-coord-entry-point" data-bind="value: spatialEntry.point, valueUpdate: 'blur'" placeholder="lat, lon (e.g. 44.2, 130)">
      <!--/ko-->
    </span>

    <span>
      <!-- ko if: ui.spatialType.displaySpatial() == 'Rectangle' && ui.spatialType.manualEntryVisible() -->
      SW: <input type="text" id="manual-coord-entry-swpoint" name="manual-coord-entry-swpoint" data-bind="value: spatialEntry.swPoint, valueUpdate: 'blur'" placeholder="lat, lon (e.g. 44.2, 130)">
      <!--/ko-->
    </span>
    <span>
      <!-- ko if: ui.spatialType.displaySpatial() == 'Rectangle' && ui.spatialType.manualEntryVisible() -->
      NE: <input type="text" id="manual-coord-entry-nepoint" name="manual-coord-entry-nepoint" data-bind="value: spatialEntry.nePoint, valueUpdate: 'blur'" placeholder="lat, lon (e.g. 50, 133.24)">
      <!--/ko-->
    </span>
    <a href="#" data-bind="click: clearSpatial" title="Clear spatial constraint"><i class="fa fa-times-circle"></i></a>
    <!-- ko if: spatialEntry.error --><span class="error" data-bind="text: spatialEntry.error()"></span><!-- /ko -->
  </p>
</div>
