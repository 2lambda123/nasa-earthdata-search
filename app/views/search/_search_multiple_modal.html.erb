<div id="search-multiple-modal" class="modal" role="dialog" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <!--ko if: $root.ui.collectionsList.focused()-->
      <div class="modal-header">
        <a href="#" class="close modal-close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></a>
        <h3 class="modal-title">Search Multiple Granule IDs</h3>
      </div>
      <div class="modal-body">
        <p class="instructions">
          Enter one ID or pattern per line.
          * (asterisk) will match any number of characters, and ? (question mark) will match exactly one character.
        </p>
        <textarea data-bind="textInput: $root.ui.collectionsList.focused().granules().query.granuleIds" id="granule-id-field" rows="5" ></textarea>
      </div>
      <div class="modal-footer">
        <a class="button primary" data-dismiss="modal" href="#">Search</a>
        <a class="button secondary" data-dismiss="modal" href="#" data-bind="click: $root.ui.collectionsList.focused().clearGranuleIds">Reset</a>
      </div>
      <!--/ko-->
    </div>
  </div>
</div>
